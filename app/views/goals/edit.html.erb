<!-- Validation failure messages -->

<% if @goal.errors.any? %>
  <% @goal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Goal #<%= @goal.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_goal/<%= @goal.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



          <!-- Label and input for goal -->
          <div class="form-group">
            <label for="goal" class="col-sm-2 control-label">
              Goal
            </label>
            <div class="col-sm-10">
              <textarea id="goal" name="goal" placeholder="Goal" class="form-control" rows="3"><%= @goal.goal %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Goal
              </button>
              or
              <a href="/goals/<%= @goal.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
