<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Entry #<%= @entry.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>User</dt>
              <dd><%= @entry.user_id %></dd>

              <dt>Minutes</dt>
              <dd><%= @entry.minutes %></dd>

              <dt>Did on</dt>
              <dd><%= @entry.did_on %></dd>

              <dt>Exercise</dt>
              <dd><%= @entry.exercise_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/entries" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/entries/<%= @entry.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_entry/<%= @entry.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
